<Window x:Class="TeamsAccountManager.Views.BulkEditDialog_Simple"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="一括編集" 
        Height="400" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- タイトル -->
        <TextBlock Grid.Row="0" 
                   Text="選択したユーザーの一括編集" 
                   FontSize="18" 
                   FontWeight="Bold"
                   Margin="0,0,0,16"/>
        
        <!-- 選択数表示 -->
        <TextBlock Grid.Row="1" 
                   x:Name="SelectionInfoTextBlock"
                   Margin="0,0,0,16"
                   Opacity="0.7"/>
        
        <!-- 編集フィールド -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="変更する項目にチェックを入れて値を入力してください" 
                       Margin="0,0,0,16"
                       Opacity="0.7"/>
            
            <!-- 部署 -->
            <CheckBox x:Name="DepartmentCheckBox" 
                      Content="部署" 
                      Margin="0,0,0,8"
                      Checked="CheckBox_Checked"
                      Unchecked="CheckBox_Unchecked"/>
            <TextBox x:Name="DepartmentTextBox" 
                     IsEnabled="False"
                     Margin="24,0,0,16"
                     Height="26"/>
            
            <!-- 役職 -->
            <CheckBox x:Name="JobTitleCheckBox" 
                      Content="役職" 
                      Margin="0,0,0,8"
                      Checked="CheckBox_Checked"
                      Unchecked="CheckBox_Unchecked"/>
            <TextBox x:Name="JobTitleTextBox" 
                     IsEnabled="False"
                     Margin="24,0,0,16"
                     Height="26"/>
            
            <!-- オフィス所在地 -->
            <CheckBox x:Name="OfficeLocationCheckBox" 
                      Content="オフィス所在地" 
                      Margin="0,0,0,8"
                      Checked="CheckBox_Checked"
                      Unchecked="CheckBox_Unchecked"/>
            <TextBox x:Name="OfficeLocationTextBox" 
                     IsEnabled="False"
                     Margin="24,0,0,16"
                     Height="26"/>
            
            <!-- アカウント有効/無効 -->
            <CheckBox x:Name="AccountEnabledCheckBox" 
                      Content="アカウント状態" 
                      Margin="0,0,0,8"
                      Checked="CheckBox_Checked"
                      Unchecked="CheckBox_Unchecked"/>
            <ComboBox x:Name="AccountEnabledComboBox" 
                      IsEnabled="False"
                      Margin="24,0,0,16"
                      Height="26">
                <ComboBoxItem Content="有効" Tag="True"/>
                <ComboBoxItem Content="無効" Tag="False"/>
            </ComboBox>
        </StackPanel>
        
        <!-- ボタン -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button x:Name="OkButton" 
                    Content="適用" 
                    Click="OkButton_Click"
                    Width="80" 
                    Height="32"
                    Margin="0,0,8,0"
                    IsDefault="True"/>
            <Button x:Name="CancelButton" 
                    Content="キャンセル" 
                    Click="CancelButton_Click"
                    Width="80" 
                    Height="32"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>