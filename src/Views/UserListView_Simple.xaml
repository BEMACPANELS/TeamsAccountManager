<UserControl x:Class="TeamsAccountManager.Views.UserListView_Simple"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- ツールバー -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                Padding="16" Margin="16,16,16,8" CornerRadius="4">
            <StackPanel Orientation="Horizontal">
                <!-- 検索ボックス -->
                <TextBox x:Name="SearchTextBox"
                         Width="200"
                         Height="32"
                         Margin="0,0,8,0"
                         VerticalContentAlignment="Center"
                         TextChanged="SearchTextBox_TextChanged"/>
                
                <!-- リフレッシュボタン -->
                <Button x:Name="RefreshButton"
                        Content="{DynamicResource DownloadFromServer}"
                        Click="RefreshButton_Click"
                        Height="32"
                        Padding="10,0"
                        Margin="0,0,8,0"/>
                        
                <!-- 保存ボタン -->
                <Button x:Name="SaveButton"
                        Content="{DynamicResource UploadToServer}"
                        Click="SaveButton_Click"
                        Height="32"
                        Padding="10,0"
                        Margin="0,0,8,0"
                        IsEnabled="False"/>
                        
                <!-- 一括編集ボタン -->
                <Button x:Name="BulkEditButton"
                        Content="{DynamicResource BulkEdit}"
                        Click="BulkEditButton_Click"
                        Height="32"
                        Padding="10,0"
                        Margin="0,0,8,0"
                        IsEnabled="False"/>
                        
                <!-- エクスポートボタン -->
                <Button x:Name="ExportButton"
                        Content="📥 エクスポート"
                        Click="ExportButton_Click"
                        Height="32"
                        Padding="10,0"
                        Margin="0,0,8,0"/>
                
                <!-- インポートボタン -->
                <Button x:Name="ImportButton"
                        Content="📤 インポート"
                        Click="ImportButton_Click"
                        Height="32"
                        Padding="10,0"
                        Margin="0,0,8,0"/>
                        
                <!-- 新規作成ボタン -->
                <Button x:Name="CreateNewButton"
                        Content="{DynamicResource CreateNewUser}"
                        Click="CreateNewButton_Click"
                        Height="32"
                        Padding="10,0"
                        Margin="0,0,8,0"
                        Background="#2196F3"
                        Foreground="White"/>
                        
                <!-- 削除ボタン -->
                <Button x:Name="DeleteUsersButton"
                        Content="{DynamicResource DeleteUsers}"
                        Click="DeleteUsersButton_Click"
                        Height="32"
                        Padding="10,0"
                        Background="#F44336"
                        Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- データグリッド -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1"
                Margin="16,8,16,8" CornerRadius="4" ClipToBounds="True">
            <Grid>
                <DataGrid x:Name="UsersDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Extended"
                          SelectionUnit="Cell"
                          CellEditEnding="DataGrid_CellEditEnding"
                          SelectionChanged="DataGrid_SelectionChanged"
                          PreviewKeyDown="DataGrid_PreviewKeyDown"
                          Margin="1,1,10,1"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          AlternatingRowBackground="#F8F8F8"
                          RowBackground="White">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Height" Value="60"/>
                            <Setter Property="Background" Value="#F5F5F5"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#F0F0F0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E8F4FD"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#D1E7F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding DisplayName}" Width="2*">
                            <DataGridTextColumn.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{DynamicResource DisplayName}" Margin="2,2,2,0" FontWeight="Bold"/>
                                    <TextBox Grid.Row="1" x:Name="FilterDisplayName" Margin="4,2,4,2" Height="24" TextChanged="FilterTextChanged" Tag="DisplayName"/>
                                </Grid>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Binding="{Binding GivenName}" Width="1.5*">
                            <DataGridTextColumn.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{DynamicResource GivenName}" Margin="2,2,2,0" FontWeight="Bold"/>
                                    <TextBox Grid.Row="1" x:Name="FilterGivenName" Margin="4,2,4,2" Height="24" TextChanged="FilterTextChanged" Tag="GivenName"/>
                                </Grid>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Binding="{Binding Surname}" Width="1.5*">
                            <DataGridTextColumn.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{DynamicResource Surname}" Margin="2,2,2,0" FontWeight="Bold"/>
                                    <TextBox Grid.Row="1" x:Name="FilterSurname" Margin="4,2,4,2" Height="24" TextChanged="FilterTextChanged" Tag="Surname"/>
                                </Grid>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Binding="{Binding Email}" Width="3*">
                            <DataGridTextColumn.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{DynamicResource Email}" Margin="2,2,2,0" FontWeight="Bold"/>
                                    <TextBox Grid.Row="1" x:Name="FilterEmail" Margin="4,2,4,2" Height="24" TextChanged="FilterTextChanged" Tag="Email"/>
                                </Grid>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Binding="{Binding EmailDomain}" Width="2*" IsReadOnly="True">
                            <DataGridTextColumn.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{DynamicResource EmailDomain}" Margin="2,2,2,0" FontWeight="Bold"/>
                                    <ComboBox Grid.Row="1" x:Name="FilterDomain" Margin="4,2,4,2" Height="24" IsEditable="True" IsTextSearchEnabled="True" TextBoxBase.TextChanged="FilterComboBoxTextChanged" Tag="EmailDomain"/>
                                </Grid>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Binding="{Binding Department}" Width="2*">
                            <DataGridTextColumn.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{DynamicResource Department}" Margin="2,2,2,0" FontWeight="Bold"/>
                                    <ComboBox Grid.Row="1" x:Name="FilterDepartment" Margin="4,2,4,2" Height="24" IsEditable="True" IsTextSearchEnabled="True" TextBoxBase.TextChanged="FilterComboBoxTextChanged" Tag="Department"/>
                                </Grid>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Binding="{Binding JobTitle}" Width="2*">
                            <DataGridTextColumn.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{DynamicResource JobTitle}" Margin="2,2,2,0" FontWeight="Bold"/>
                                    <ComboBox Grid.Row="1" x:Name="FilterJobTitle" Margin="4,2,4,2" Height="24" IsEditable="True" IsTextSearchEnabled="True" TextBoxBase.TextChanged="FilterComboBoxTextChanged" Tag="JobTitle"/>
                                </Grid>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Binding="{Binding Country}" Width="1.5*">
                            <DataGridTextColumn.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{DynamicResource Country}" Margin="2,2,2,0" FontWeight="Bold"/>
                                    <ComboBox Grid.Row="1" x:Name="FilterCountry" Margin="4,2,4,2" Height="24" IsEditable="True" IsTextSearchEnabled="True" TextBoxBase.TextChanged="FilterComboBoxTextChanged" Tag="Country"/>
                                </Grid>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Binding="{Binding OfficeLocation}" Width="1.5*">
                            <DataGridTextColumn.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{DynamicResource OfficeLocation}" Margin="2,2,2,0" FontWeight="Bold"/>
                                    <ComboBox Grid.Row="1" x:Name="FilterOffice" Margin="4,2,4,2" Height="24" IsEditable="True" IsTextSearchEnabled="True" TextBoxBase.TextChanged="FilterComboBoxTextChanged" Tag="OfficeLocation"/>
                                </Grid>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Binding="{Binding UsageLocation}" Width="1*">
                            <DataGridTextColumn.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{DynamicResource UsageLocation}" Margin="2,2,2,0" FontWeight="Bold"/>
                                    <ComboBox Grid.Row="1" x:Name="FilterUsage" Margin="4,2,4,2" Height="24" IsEditable="True" IsTextSearchEnabled="True" TextBoxBase.TextChanged="FilterComboBoxTextChanged" Tag="UsageLocation"/>
                                </Grid>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                        
                        <DataGridCheckBoxColumn Binding="{Binding AccountEnabled}" Width="0.8*">
                            <DataGridCheckBoxColumn.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{DynamicResource AccountEnabled}" Margin="2,2,2,0" FontWeight="Bold"/>
                                    <ComboBox Grid.Row="1" x:Name="FilterEnabled" Margin="4,2,4,2" Height="24" SelectionChanged="FilterEnabledChanged">
                                        <ComboBoxItem Content="全て" IsSelected="True"/>
                                        <ComboBoxItem Content="有効"/>
                                        <ComboBoxItem Content="無効"/>
                                    </ComboBox>
                                </Grid>
                            </DataGridCheckBoxColumn.Header>
                        </DataGridCheckBoxColumn>
                        
                        <DataGridCheckBoxColumn Binding="{Binding IsGuest, Mode=OneWay}" Width="1*" IsReadOnly="True">
                            <DataGridCheckBoxColumn.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{DynamicResource IsGuest}" Margin="2,2,2,0" FontWeight="Bold"/>
                                    <ComboBox Grid.Row="1" x:Name="FilterGuest" Margin="4,2,4,2" Height="24" SelectionChanged="FilterGuestChanged">
                                        <ComboBoxItem Content="全て" IsSelected="True"/>
                                        <ComboBoxItem Content="ゲスト"/>
                                        <ComboBoxItem Content="メンバー"/>
                                    </ComboBox>
                                </Grid>
                            </DataGridCheckBoxColumn.Header>
                        </DataGridCheckBoxColumn>
                        
                        <DataGridCheckBoxColumn Binding="{Binding HasLicense, Mode=OneWay}" Width="1*" IsReadOnly="True">
                            <DataGridCheckBoxColumn.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{DynamicResource HasLicense}" Margin="2,2,2,0" FontWeight="Bold"/>
                                    <ComboBox Grid.Row="1" x:Name="FilterLicense" Margin="4,2,4,2" Height="24" SelectionChanged="FilterLicenseChanged">
                                        <ComboBoxItem Content="全て" IsSelected="True"/>
                                        <ComboBoxItem Content="有り"/>
                                        <ComboBoxItem Content="無し"/>
                                    </ComboBox>
                                </Grid>
                            </DataGridCheckBoxColumn.Header>
                        </DataGridCheckBoxColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- ローディング表示 -->
                <Border x:Name="LoadingOverlay" 
                        Background="#80000000" 
                        Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" 
                                     Width="200" 
                                     Height="4"/>
                        <TextBlock Text="読み込み中..." 
                                   Foreground="White" 
                                   Margin="0,16,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ステータスバー -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="8,4" Margin="16,0,16,16">
            <TextBlock x:Name="StatusTextBlock" Text="準備完了"/>
        </Border>
    </Grid>
</UserControl>