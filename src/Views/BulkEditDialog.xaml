<UserControl x:Class="TeamsAccountManager.Views.BulkEditDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Width="600" MinHeight="400">
    
    <materialDesign:Card Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- ヘッダー -->
            <TextBlock Grid.Row="0" Text="{DynamicResource BulkEdit}" 
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       Margin="0,0,0,16"/>
            
            <!-- 編集フィールド -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- 部署一括変更 -->
                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox x:Name="DepartmentCheckBox" 
                                  Grid.Column="0"
                                  Margin="0,0,16,0"
                                  VerticalAlignment="Center"/>
                        
                        <TextBox Grid.Column="1"
                                 Text="{Binding BulkDepartment}"
                                 materialDesign:HintAssist.Hint="{DynamicResource Department}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 IsEnabled="{Binding ElementName=DepartmentCheckBox, Path=IsChecked}"/>
                    </Grid>
                    
                    <!-- 役職一括変更 -->
                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox x:Name="JobTitleCheckBox" 
                                  Grid.Column="0"
                                  Margin="0,0,16,0"
                                  VerticalAlignment="Center"/>
                        
                        <TextBox Grid.Column="1"
                                 Text="{Binding BulkJobTitle}"
                                 materialDesign:HintAssist.Hint="{DynamicResource JobTitle}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 IsEnabled="{Binding ElementName=JobTitleCheckBox, Path=IsChecked}"/>
                    </Grid>
                    
                    <!-- オフィス一括変更 -->
                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox x:Name="OfficeCheckBox" 
                                  Grid.Column="0"
                                  Margin="0,0,16,0"
                                  VerticalAlignment="Center"/>
                        
                        <TextBox Grid.Column="1"
                                 Text="{Binding BulkOfficeLocation}"
                                 materialDesign:HintAssist.Hint="{DynamicResource OfficeLocation}"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 IsEnabled="{Binding ElementName=OfficeCheckBox, Path=IsChecked}"/>
                    </Grid>
                    
                    <!-- アカウント有効/無効一括変更 -->
                    <Grid Margin="0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <CheckBox x:Name="AccountEnabledCheckBox" 
                                  Grid.Column="0"
                                  Margin="0,0,16,0"
                                  VerticalAlignment="Center"/>
                        
                        <ComboBox Grid.Column="1"
                                  SelectedItem="{Binding BulkAccountEnabled}"
                                  materialDesign:HintAssist.Hint="{DynamicResource AccountEnabled}"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                  IsEnabled="{Binding ElementName=AccountEnabledCheckBox, Path=IsChecked}">
                            <ComboBoxItem Content="{DynamicResource Enabled}"/>
                            <ComboBoxItem Content="{DynamicResource Disabled}"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
            
            <!-- 対象ユーザー数 -->
            <TextBlock Grid.Row="2" Margin="0,16,0,16">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}: {1}">
                        <Binding Source="{DynamicResource SelectedUsers}"/>
                        <Binding Path="SelectedUsersCount"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            
            <!-- ボタン -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{DynamicResource Cancel}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        CommandParameter="False"
                        Margin="0,0,8,0"/>
                
                <Button Content="{DynamicResource Apply}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        CommandParameter="True"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>