<Window x:Class="TeamsAccountManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Teams Account Manager"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Border Grid.Row="0" Background="#1976D2" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Teams Account Manager" 
                           VerticalAlignment="Center"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Medium"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- 言語選択 -->
                    <ComboBox x:Name="LanguageComboBox" 
                              Margin="0,0,16,0"
                              SelectedIndex="0"
                              Width="100">
                        <ComboBoxItem>日本語</ComboBoxItem>
                        <ComboBoxItem>English</ComboBoxItem>
                        <ComboBoxItem>Tiếng Việt</ComboBoxItem>
                    </ComboBox>
                    
                    <!-- 権限表示 -->
                    <Border Background="#2E7D32" 
                            CornerRadius="12"
                            Padding="8,4"
                            Margin="0,0,16,0"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="PermissionIcon" 
                                       Text="✏️" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,4,0"
                                       Foreground="White"/>
                            <TextBlock x:Name="PermissionTextBlock" 
                                       Text="{DynamicResource ReadWriteEnabled}" 
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- ユーザー情報 -->
                    <TextBlock x:Name="UserInfoTextBlock" 
                               VerticalAlignment="Center" 
                               Margin="0,0,16,0"
                               Foreground="White"/>
                    
                    <!-- ログアウトボタン -->
                    <Button x:Name="LogoutButton" 
                            Content="ログアウト"
                            Click="LogoutButton_Click"
                            Margin="0,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- メインコンテンツ -->
        <ContentControl x:Name="MainContent" Grid.Row="1"/>

        <!-- ステータスバー -->
        <Border Grid.Row="2" Background="#E0E0E0" Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusTextBlock" 
                           Grid.Column="0" 
                           VerticalAlignment="Center"/>
                
                <ProgressBar x:Name="StatusProgressBar" 
                             Grid.Column="1" 
                             Width="200" 
                             Height="16" 
                             Margin="8,0,0,0"
                             Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
</Window>